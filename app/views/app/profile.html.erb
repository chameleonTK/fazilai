<% content_for :body do %>

<!-- Nav tabs -->
<ul class="nav nav-tabs">

  <li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>

  <li><a href="#settings" data-toggle="tab">Settings</a></li>
</ul>
<div class="mini-layout">
            <div class="mini-layout-body"></div>
          </div>

<!-- Tab panes -->
<div class="tab-content" >
  <div class="tab-pane active" id="profile"  style="background-color:#FFFFFF;height:1080px;width:1380px;float:left;">
<font color="green">
<br>
<div style="width: 450px;float: left;
min-height: 1px;
margin-left: 20px">
<%u = Auth.user %>
  <% result=User.where(uid: u.id).take %>
  <br>
  <legend>account<span class="green"></span></legend>

   username:
  <%=result[:email] %>
<br><br>
 <legend>achievement(s)<span class="green"></span></legend>

<% acount=Ownachiefe.where(user_id: u.id).count %>
<%a = u.obj.ownachieves  %>
<% for i in 0..(acount-1) %>
<%=a[i].achievements[0][:name].inspect %>
<%end%>

</div>
<div style="width: 450px;float: left;
min-height: 1px;
margin-left: 20px;">
<%servercount= Server.where(user_id: u.id).count %>
  <br>
   <legend>server(s) and project(s)<span class="green"></span></legend>

  The number of server(s) : <%=servercount %>:<br>
<%s = u.obj.servers  %>
<% for i in 0..(servercount-1) %>
<%=i+1%><%= " Server name:"%><%projectcount= Proj.where(server_id: s[i][:sid].inspect).count %>
<%=s[i][:name].inspect %><%= " contains "%><%=projectcount%><%= " project(s)."%><br>
	<% for ii in 0..(projectcount-1) %>
	<%="  -        "%><%= s[i].projs[ii][:name].inspect%><br>
	<%end%>
<% end %>
</div>		
</font>




   </div>

  <div class="tab-pane" id="settings"  style="background-color:#FFFFFF;height:1080px;width:1380px;float:left;>
  
<div class="mini-layout">
            <div class="mini-layout-body  style="background-color:#dceaf4;width: 70%;">

<br>

	<div  align=center>
	<table>
	<tr>
	<td>
	<%= form_for :post do |f| %>
		<% flash.each do |name, msg| -%>
      	<%= content_tag :div, msg, class: name %>
    	<% end %>		

    	<div style="color:black"><h4>Change password</h4></div>
	<div style="width:300px;height:1px;background:gray"><div>
	</div>
	</div>
	<br><br>
    	<%= f.text_field :oldpassword,:class => "form-control fazilai-textform",:placeholder => "old password" %><br>
    	<%= f.password_field :newpassword ,:class => "form-control fazilai-textform",:placeholder => "new password"%><br>
	<%= f.password_field :renewpassword ,:class => "form-control fazilai-textform",:placeholder => "re new password"%><br>

		<%= f.submit :"Submit" , :class => "form-control fazilai-login btn-warning" , :style => "display:inline"%> 
		<br>
		<br>
		<div style="width:300px;height:1px;background:gray"><div>
	</div>
	<% end %>
	</div>
	<td>
	<tr>
	<table>

</div>
</div>



</div>
<% end%>
